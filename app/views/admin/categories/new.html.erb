<% content_for :title, t("admin.categories.new.title") %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h4 mb-0"><%= t("admin.categories.new.title") %></h1>
  <%= link_to t("admin.categories.new.cancel"), admin_categories_path, class: "btn btn-outline-secondary" %>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <%= render "form", category: @category %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-light">
        <h6 class="mb-0"><%= t(".tips_title") %></h6>
      </div>
      <div class="card-body">
        <ul class="list-unstyled mb-0">
          <li class="mb-2">
            <i class="fas fa-lightbulb text-warning me-2"></i>
            <%= t(".tip_1") %>
          </li>
          <li class="mb-2">
            <i class="fas fa-lightbulb text-warning me-2"></i>
            <%= t(".tip_2") %>
          </li>
          <li class="mb-2">
            <i class="fas fa-lightbulb text-warning me-2"></i>
            <%= t(".tip_3") %>
          </li>
          <li>
            <i class="fas fa-lightbulb text-warning me-2"></i>
            <%= t(".tip_4") %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
